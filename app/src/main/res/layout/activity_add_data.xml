<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarThumbVertical="@android:color/white"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:background="#000000"
            android:isScrollContainer="false"
            tools:context=".MainActivity">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="236dp"
                android:layout_height="406dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oiltype_text">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#EDEAEA" />


                </TableRow>

                <TableRow
                    android:layout_width="185dp"
                    android:layout_height="380dp">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="363dp"
                        android:background="#000000"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/benzene_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:buttonTint="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/gas95_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:buttonTint="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/gas91_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:buttonTint="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/e20_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:buttonTint="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/e85_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="49dp"
                            android:buttonTint="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/b7_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="49dp"
                            android:buttonTint="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/b10_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="49dp"
                            android:buttonTint="@color/colorAccent" />
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="126dp"
                        android:layout_height="374dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/benzin" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/gasohol95" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/gasohol91" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/gasohole20" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/gasohole85" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            app:srcCompat="@drawable/diesel" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            app:srcCompat="@drawable/dieselb7" />
                    </LinearLayout>


                </TableRow>


            </TableLayout>

            <TextView
                android:id="@+id/oil_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="Oli Recorder"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="116dp"
                android:text="Date"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Mileage"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:text="Amount"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

            <TextView
                android:id="@+id/unit_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Unit price"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/amount_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/amount_text"
                app:layout_constraintTop_toBottomOf="@+id/amount_text" />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="price"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/unit_price_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/unit_price_text"
                app:layout_constraintTop_toBottomOf="@+id/unit_price_text" />

            <Button
                android:id="@+id/summit_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="summit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.0" />

            <EditText
                android:id="@+id/mileage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:ems="4"
                android:hint="xxxxxx"
                android:inputType="numberDecimal"
                android:shadowColor="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7"
                app:layout_constraintVertical_bias="0.384" />

            <EditText
                android:id="@+id/price_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:ems="5"
                android:hint="xxx.xx"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/price_text"
                app:layout_constraintStart_toEndOf="@+id/price_text"
                app:layout_constraintTop_toTopOf="@+id/price_text"
                app:layout_constraintVertical_bias="0.571" />

            <EditText
                android:id="@+id/unit_editext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:ems="5"
                android:hint="xxx.xx"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/unit_price_text"
                app:layout_constraintStart_toEndOf="@+id/unit_price_text"
                app:layout_constraintTop_toTopOf="@+id/unit_price_text"
                app:layout_constraintVertical_bias="0.523" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="bath"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/price_edittext"
                app:layout_constraintStart_toEndOf="@+id/price_edittext"
                app:layout_constraintTop_toTopOf="@+id/price_edittext"
                app:layout_constraintVertical_bias="0.523" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:text="bath"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/unit_editext"
                app:layout_constraintStart_toEndOf="@+id/unit_editext"
                app:layout_constraintTop_toTopOf="@+id/unit_editext"
                app:layout_constraintVertical_bias="0.523" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:text="KM"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/mileage_text"
                app:layout_constraintStart_toEndOf="@+id/mileage_text"
                app:layout_constraintTop_toTopOf="@+id/mileage_text"
                app:layout_constraintVertical_bias="0.384" />

            <TextView
                android:id="@+id/oiltype_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="28dp"
                android:text="Oil type"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>